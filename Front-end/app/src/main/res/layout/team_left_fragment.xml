<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:visibility="visible"
    tools:layout_width="match_parent">

    <TextView
        android:id="@+id/leftHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:text="Teams"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        android:visibility="visible"
        app:fontFamily="sans-serif-black" />

    <ListView
        android:id="@+id/teamList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="150dp"
        android:background="@android:color/background_light"
        android:divider="#9F030303"
        android:dividerHeight="@dimen/nav_header_vertical_spacing"
        android:footerDividersEnabled="false"
        android:gravity="center_horizontal"
        android:headerDividersEnabled="false"></ListView>

    <Button
        android:id="@+id/button_createTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teamList"
        android:text="Create Team" />

</RelativeLayout>