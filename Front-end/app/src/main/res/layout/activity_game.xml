<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/Layout" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/HomeButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="25dp"
        android:orientation="vertical" />

    <ListView
        android:id="@+id/gameEventLog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/basketBallCourt"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/erbos_draco_1st_open_nbp"
        android:padding="5dp"
        android:text="00:00"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="60sp" />

    <Button
        android:id="@+id/StartPauseTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Timer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="539dp"
        android:layout_marginLeft="539dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Start" />

    <Button
        android:id="@+id/SetTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Timer"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/StartPauseTimer"
        android:text="Set Timer" />

    <ImageView
        android:id="@+id/basketBallCourt"
        android:layout_width="900dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bballcourt"
        android:layout_below="@+id/Timer" />

</RelativeLayout>