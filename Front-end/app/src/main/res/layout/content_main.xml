<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"
      android:adjustViewBounds="true"
      android:src="@drawable/basketballbg"
      android:scaleType="centerCrop"
      tools:layout_editor_absoluteX="72dp"
      tools:layout_editor_absoluteY="0dp" />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="56dp"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">


    <Button
        android:id="@+id/start_teamActivity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:width="500dp"
        android:height="100dp"
        android:background="@android:color/background_light"
        android:text="@string/my_teams"
        android:textAlignment="center"
        android:textSize="32dp"
        android:visibility="visible"
        app:fontFamily="@font/exoblack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />


    <Button
        android:id="@+id/start_statsActivity_button"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_margin="10dp"
        android:width="500dp"
        android:height="100dp"
        android:background="@android:color/background_light"
        android:text="Statistics"
        android:textAlignment="center"
        android:textSize="32dp"
        android:visibility="visible"
        app:fontFamily="@font/exoblack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <Button
        android:id="@+id/start_gameActivity_button"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_margin="10dp"
        android:width="500dp"
        android:height="100dp"
        android:background="@android:color/background_light"
        android:text="Resume Game"
        android:textAlignment="center"
        android:textSize="32dp"
        android:visibility="invisible"
        app:fontFamily="@font/exoblack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />
  </LinearLayout>

  <TextView
      android:id="@+id/textView2"
      android:layout_width="360dp"
      android:layout_height="800dp"
      android:layout_marginStart="92dp"
      android:paddingTop="60dp"
      android:text="StatTracker For BasketBall"
      android:textColor="@android:color/background_light"
      android:textSize="64sp"
      app:fontFamily="@font/exoblack"
      app:layout_constraintStart_toStartOf="@+id/imageView2"
      tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
